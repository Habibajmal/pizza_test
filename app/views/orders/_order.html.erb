<div id="<%= dom_id order %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= order.status %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Total price:</strong>
    <%= order.total_price %>
  </p>
  <div>
    <p> Items </p>
    <% order.items.each do |item| %>
      <h6> Pizza Name <%= item.pizza.title%> </h6>
      <h6> Size <%= PriceSetting.find(item.price_id).size %> </h6>
      <p> Ingredient </p>
      <% item.item_ingredients.each do |ingredient| %>
        <p> <%= ingredient.ingredient.ingredient_name %>, <%= ingredient.status%>  </p>
      <% end %>
    <% end %>
  </div>
  <% if action_name != "show" %>
    <%= link_to "Show this order", order, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this order', edit_order_path(order), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
