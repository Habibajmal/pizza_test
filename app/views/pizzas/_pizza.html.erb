<div id="<%= dom_id pizza %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= pizza.title %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Base Price:</strong>
    <%= pizza.base_price %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this pizza", pizza, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this pizza', edit_pizza_path(pizza), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
